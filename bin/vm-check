#!/bin/bash

curr_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

SSH_KEY=~/.ssh/id_rsa

while getopts :i opt; do
	case $opt in
		i) SSH_KEY=$OPTARG;;
		\?) echo "Invalid option: -$opt"; echo "Usage vm-install [-i <ssh_key>] <host> <user> <module>"; exit 1;;
	esac
done

if [ $# -lt 3 ]; then
	echo "Usage vm-install [-i <ssh_key>] <host> <user> <module>"
	exit 1
fi

args=${@:$(($#-2))}
module=`echo $args | awk '{ split($0, a, " "); print a[3] }'`
user=`echo $args | awk '{ split($0, a, " "); print a[2] }'`
host=`echo $args | awk '{ split($0, a, " "); print a[1] }'`

if [ ! -e $curr_dir/../module/$module/check ]; then
	echo "Can't find module '$module' check file $curr_dir/../module/$module/check"
	exit 2
else
	scp -r $curr_dir/../module/$module $user@$host:/home/$user/.	
	ssh -i $SSH_KEY $user@$host "/home/$user/$module/check"
fi
exit $?
